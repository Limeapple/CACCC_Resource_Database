<h3>{{viewTitle}}</h3>

<form action="/resource" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{resource._id}}">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Resource Type</label>
        <input type="text" class="form-control" name="resourceType" placeholder="Resource Type" value="{{resource.resourceType}}">
    </div>
    <div class="form-group col-md-6">
        <label>Resource Name</label>
        <input type="text" class="form-control" name="resourceName" placeholder="Resource Name" value="{{resource.resourceName}}">
    </div>
  </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Resource Phone</label>
            <input type="text" class="form-control" name="resourcePhone" placeholder="Resource Phone" value="{{resource.resourcePhone}}">
        </div>
        <div class="form-group col-md-6">
            <label>Resource Website</label>
            <input type="text" class="form-control" name="resourceWebsite" placeholder="Resource Website" value="{{resource.resourceWebsite}}">
        </div>
    </div>
    <div class="form-row">
            <label>Resource Address</label>
            <input type="text" class="form-control" name="resourceAddress" placeholder="Resource Address" value="{{resource.resourceAddress}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Resource City</label>
            <input type="text" class="form-control" name="resourceCity" placeholder="Resource City" value="{{resource.resourceCity}}">
        </div>
        <div class="form-group col-md-6">
            <label>Resource State</label>
            <input type="text" class="form-control" name="resourceState" placeholder="Resource State" value="{{resource.resourceState}}">
        </div>
        <div class="form-group col-md-3">
            <label>Resource Zipcode</label>
            <input type="text" class="form-control" name="resourceZip" placeholder="Resource Zip" value="{{resource.resourceZip}}">
        </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
            <label>Resource Link</label>
            <input type="text" class="form-control" name="resourceLink" placeholder="Resource Link" value="{{resource.resourceLink}}">
      </div>
      <div class="form-group col-md-3">
            <label>Resource Hours</label>
            <input type="text" class="form-control" name="resourceHours" placeholder="Resource Hours" value="{{resource.resourceHours}}">
      </div>
    </div>
    <div class="form-row">
            <label>Resource Services</label>
            <input type="text" class="form-control" name="resourceServices" placeholder="Resource Services" value="{{resource.resourceServices}}">
    </div>
    <div class="form-row">
      <div class="form-group">
          <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
          <a class="btn btn-secondary" href="/resource/list"><i class="fa fa-list-alt"></i> View All</a>
      </div>
    </div>
</form>
