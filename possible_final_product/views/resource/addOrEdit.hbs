<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<h3>Add Resource</h3>
<form action="/resource" method="POST" autocomplete="off" >
    <input type="hidden" name="_id" value="{{resource._id}}">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label style="font-weight: bold;";>Resource Type</label>

    <input type="text" class="form-control" name="resourceType" placeholder="Resource Type" value="{{resource.resourceType}}">
    </div>
    <div class="form-group col-md-6">
        <label style="font-weight: bold;">Name</label>
        <input type="text" class="form-control" name="resourceName" placeholder="Name" value="{{resource.resourceName}}">
    </div>
  </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label style="font-weight: bold;">Phone Number(s)</label>
            <input type="text" class="form-control" name="resourcePhone" placeholder="Phone Number(s)" value="{{resource.resourcePhone}}">
        </div>
        <div class="form-group col-md-4">
            <label style="font-weight: bold;">Website</label>
            <input type="text" class="form-control" name="resourceWebsite" placeholder="Website" value="{{resource.resourceWebsite}}">
        </div>
        <div class="form-group col-md-4">
              <label style="font-weight: bold;">Hours of Operation</label>
              <input type="text" class="form-control" name="resourceHours" placeholder="Hours of Operation" value="{{resource.resourceHours}}">
        </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-5">
            <label style="font-weight: bold;">Address</label>
            <input type="text" class="form-control" name="resourceAddress" placeholder="Address" value="{{resource.resourceAddress}}">
      </div>
      <div class="form-group col-md-3">
          <label style="font-weight: bold;">City</label>
          <input type="text" class="form-control" name="resourceCity" placeholder="City" value="{{resource.resourceCity}}">
      </div>
      <div class="form-group col-md-2">
            <label style="font-weight: bold;">State</label>
            <input type="text" class="form-control" name="resourceState" placeholder="State" value="{{resource.resourceState}}">
            <!-- <script>
              let strUser=$('option:selected').text();
              console.log(strUser);
            </script> -->
          </select>
        </div>
        <div class="form-group col-md-2">
            <label style="font-weight: bold;">Zipcode</label>
            <input type="text" class="form-control" name="resourceZip" placeholder="Zipcode" value="{{resource.resourceZip}}">
        </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
            <label style="font-weight: bold;">Link</label>
            <textarea style="resize:none; height:180px"class="form-control" name="resourceLink" placeholder="Links to any files" value="{{resource.resourceLink}}"></textarea>
      </div>
    <div class="form-group col-md-6">
            <label style="font-weight: bold;">Resource Description</label>
            <textarea style="resize:none; height:180px" class="form-control" name="resourceServices" placeholder="Resource Description" value="{{resource.resourceServices}}"></textarea>
    </div>
  <div id = "wtf">
    <div class="form-row">
      <div class="form-group" style="width:100%; display:flex; justify-content:center;">
        <div style="padding:5px ">  <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button></div>
          <div style="padding:5px"><a class="btn btn-secondary" href="/resource/list"><i class="fa fa-list-alt"></i> View All</a></div>
      </div>
    </div>
  </div>
</form>

<style>
#wtf{
    margin: auto;
    width: 15%;
}
</style>

