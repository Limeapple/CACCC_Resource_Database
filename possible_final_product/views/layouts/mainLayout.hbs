{{!-- Script to control the sidebar--}}
<script>
        var state = "minimized";
//Check if navbar is expanded or minimized and handle
onload=$('#navbar-toggle').click(function() {
    if (state == "expanded") {
        $('.sidebar').css('margin-left', '-230px');
        $('.sidebar-nav li a').css('color', 'hsla(120, 87%, 30%, 1)')
        state = "minimized";
    } else {
        if (state == "minimized") {
            $('.sidebar').css('margin-left', '-20px');
            $('.sidebar-nav li a').css('color', 'white')
            state = "expanded";
        }
    }
    //function that closes the sidebar if the user clicks outside the sidebar container
    $(document).mouseup(function (e)
{
    var container = $(".sidebar");

    if (!container.is(e.target) &&            // If the target of the click is not the desired div or section
        container.has(e.target).length === 0) // ... nor a descendant-child of the container
    {
      $('.sidebar').css('margin-left', '-230px');
      $('.sidebar-nav li a').css('color', 'hsla(120, 87%, 30%, 1)')
      state = "minimized";
    }
});
})
</script>

